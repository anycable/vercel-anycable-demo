app = "vercel-cable"
kill_signal = "SIGINT"
kill_timeout = 5
processes = []

[build]
  image = "anycable/anycable-go:1.4"

[env]
  PORT = "8080"
  ANYCABLE_PRESETS = "fly,broker"
  # ANYCABLE_HTTP_BROADCAST_SECRET = "" # set via secrets
  # ANYCABLE_RPC_HOST = "" # set via secrets
  # ANYCABLE_DEBUG = "true" # uncomment to enable debug logging

[[services]]
  http_checks = []
  internal_port = 8080
  processes = ["app"]
  protocol = "tcp"
  script_checks = []
  [services.concurrency]
    hard_limit = 10000
    soft_limit = 10000
    type = "connections"

  [[services.ports]]
    handlers = ["tls", "http"]
    port = 443

  [[services.tcp_checks]]
    grace_period = "1s"
    interval = "15s"
    restart_limit = 0
    timeout = "2s"
